            div(ng-div) vom Transclude

div.row service module
    div.col-md-12
        section(ng-controller="module")
            div(ng-bind="FileMessage[0].Message")
            ul.navlist
                li(ng-repeat="message in FileMessage") {{message.Message}}
div.row(ng-controller="forms") Formulare
    form.form-horizontal.well
        div.control-group
            div.controls
                input#inputEmail(type="email" required placeholder="email" ng-model="email")
                input#password(type="password" required placeholder="password")
            input(type="button")
            div {{email}}